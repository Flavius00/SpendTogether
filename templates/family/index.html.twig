{% extends 'base.html.twig' %}

{% block title %}Family Dashboard{% endblock %}

{% block body %}
    <div class="flex h-screen">
        <!-- Left Panel - Fixed/Stationary -->
        <div class="w-[35%] bg-custom-mint border-r border-custom-teal p-8 flex flex-col justify-center space-y-8 overflow-hidden" style="height: calc(100vh - 80px);">
            <div class="text-center mb-12">
                <h1 class="text-3xl font-bold text-custom-light mb-4">Family Management</h1>
                <p class="text-custom-light opacity-80">If you don't alredy have a family to join.</p>
                <p class="text-custom-light opacity-80">You can create your own, and invithe others.</p>
            </div>

            <div class="space-y-6">
                <a href="{{ path('app_family_create') }}"
                   class="w-full px-8 py-6 border-2 border-custom-teal bg-custom-teal text-custom-light hover:bg-custom-light hover:text-custom-dark transition-all duration-300 font-semibold text-xl rounded-lg block text-center">
                    Make a Family
                </a>

                <a href="{{ path('app_family_join') }}"
                   class="w-full px-8 py-6 border-2 border-custom-light text-custom-light hover:bg-custom-light hover:text-custom-dark transition-all duration-300 font-semibold text-xl rounded-lg block text-center">
                    Join a Family
                </a>
            </div>
        </div>

        <!-- Right Content Area - Scrollable -->
        <div class="flex-1 bg-custom-dark overflow-y-auto" style="height: calc(100vh - 80px);">
            {% block right_content %}
                <div class="h-full flex items-center justify-center p-8">
                    <div class="text-center text-custom-light opacity-60">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-24 h-24 mx-auto mb-4 opacity-40">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z"></path>
                        </svg>
                        <p class="text-lg">Select an option from the left panel</p>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}
