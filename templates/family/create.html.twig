{% extends 'family/index.html.twig' %}

{% block title %}Create Family{% endblock %}

{% block right_content %}
    <div class="flex items-center justify-center h-full w-full">
        <div class="w-full max-w-2xl bg-custom-mint rounded-2xl shadow-lg p-8 border border-custom-teal">
            <h1 class="text-3xl font-bold text-custom-light mb-8 text-center">Create Family</h1>

            {{ form_start(createFamilyForm) }}

            <div class="space-y-6">
                {{ form_row(createFamilyForm.name, {
                    label_attr: { class: 'block text-lg font-semibold text-custom-light mb-3' },
                    attr: { class: 'w-full p-4 bg-custom-dark text-custom-light rounded-lg border-2 border-custom-teal focus:outline-none focus:border-custom-light transition-all duration-300 text-lg' }
                }) }}

                {{ form_row(createFamilyForm.monthlyTargetBudget, {
                    label_attr: { class: 'block text-lg font-semibold text-custom-light mb-3' },
                    attr: { class: 'w-full p-4 bg-custom-dark text-custom-light rounded-lg border-2 border-custom-teal focus:outline-none focus:border-custom-light transition-all duration-300 text-lg' }
                }) }}
            </div>

            <button class="w-full px-8 py-4 border-2 border-custom-teal bg-custom-teal text-custom-light hover:bg-custom-light hover:text-custom-dark transition-all duration-300 font-semibold text-xl rounded-lg mt-8">
                Create Family
            </button>

            {{ form_end(createFamilyForm) }}
        </div>
    </div>

    <!-- Flash Messages -->
    <div class="fixed top-4 right-4 z-50 space-y-3">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="max-w-sm p-4 rounded-lg shadow-lg border-2 transform transition-all duration-300 ease-in-out
                    {% if type == 'success' %}
                        bg-green-100 border-green-500 text-green-700
                    {% elseif type == 'error' %}
                        bg-red-100 border-red-500 text-red-700
                    {% elseif type == 'warning' %}
                        bg-yellow-100 border-yellow-500 text-yellow-700
                    {% else %}
                        bg-blue-100 border-blue-500 text-blue-700
                    {% endif %}">
                    <div class="flex items-center justify-between">
                        <span class="font-medium">{{ message }}</span>
                        <button onclick="this.parentElement.parentElement.remove()" class="ml-3 text-gray-400 hover:text-gray-600 transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}
