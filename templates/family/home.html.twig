{% extends 'base.html.twig' %}
{% block title %}Family Dashboard{% endblock %}

{% block body %}
    <div class="h-full bg-custom-dark p-8 overflow-y-auto">
        <div class="max-w-6xl mx-auto">
            <!-- Header Section -->
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-custom-light mb-2">{{ family.name }}</h1>
                    <p class="text-custom-light opacity-80">Monthly Budget: ${{ family.monthlyTargetBudget }}</p>
                </div>
                <a href="{{ path('app_family_show_free_users') }}" class="px-6 py-3 bg-custom-teal text-custom-light hover:bg-custom-light hover:text-custom-dark transition-all duration-300 font-semibold rounded-lg flex items-center space-x-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM3 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 9.374 21c-2.331 0-4.512-.645-6.374-1.766Z" />
                    </svg>
                    <span>Add User</span>
                </a>
            </div>

            <!-- Family Members Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                {% for user in family.users %}
                    <div class="bg-custom-mint rounded-lg p-6 border border-custom-teal hover:border-custom-light transition-all duration-300">
                        <div class="flex items-center space-x-4 mb-4">
                            <div class="w-12 h-12 bg-custom-teal rounded-full flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                                </svg>
                            </div>
                            <div class="flex-1">
                                <h3 class="text-lg font-semibold text-custom-light">{{ user.email }}</h3>
                                <p class="text-custom-light opacity-70 text-sm">Active Member</p>
                            </div>
                        </div>

                        {% if user.id != app.user.id %}
                            <div class="flex justify-end">
                                <button class="text-red-400 hover:text-red-300 transition-colors duration-200 p-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                                    </svg>
                                </button>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>

            <!-- Family Statistics -->
            <div class="bg-custom-mint rounded-lg p-6 border border-custom-teal mb-8">
                <h2 class="text-xl font-bold text-custom-light mb-4">Family Statistics</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="text-center">
                        <div class="text-2xl font-bold text-custom-teal">{{ family.users|length }}</div>
                        <div class="text-custom-light opacity-80">Total Members</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-custom-teal">${{ family.monthlyTargetBudget }}</div>
                        <div class="text-custom-light opacity-80">Monthly Budget</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
