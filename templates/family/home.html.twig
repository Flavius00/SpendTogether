{% extends 'base.html.twig' %}
{% block title %}Family Dashboard{% endblock %}

{% block body %}
    <div class="h-full bg-custom-dark p-8 overflow-y-auto">
        <div class="max-w-6xl mx-auto">
            <!-- Header Section -->
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-custom-light mb-2">{{ family.name }}</h1>
                    <p class="text-custom-light opacity-80">Monthly Budget: â‚¬{{ family.monthlyTargetBudget }}</p>                </div>
                <div class="flex gap-3">
                    {% if userRole == 'ROLE_ADMIN' %}
                        <a href="{{ path('app_family_home', {familyId: family.id}) }}" class="px-6 py-3 bg-custom-teal text-custom-light hover:bg-custom-light hover:text-custom-dark transition-all duration-300 font-semibold rounded-lg flex items-center space-x-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487a2.25 2.25 0 1 1 3.182 3.182l-9.19 9.19a2.25 2.25 0 0 1-1.06.586l-4.5 1.125a1.125 1.125 0 0 1-1.36-1.36l1.125-4.5a2.25 2.25 0 0 1 .586-1.06l9.19-9.19zM14.121 6l3-3m0 0L18 4m-3-3v3h3" />
                            </svg>
                            <span>Edit Family</span>
                        </a>
                        <a href="{{ path('app_family_add_user') }}" class="px-6 py-3 bg-custom-teal text-custom-light hover:bg-custom-light hover:text-custom-dark transition-all duration-300 font-semibold rounded-lg flex items-center space-x-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M18 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0ZM3 19.235v-.11a6.375 6.375 0 0 1 12.75 0v.109A12.318 12.318 0 0 1 9.374 21c-2.331 0-4.512-.645-6.374-1.766Z"></path>
                            </svg>
                            <span>Add User</span>
                        </a>
                    {% endif %}

                    <a href="{{ path('app_family_leave') }}" class="px-6 py-3 bg-red-500 text-custom-light hover:bg-red-600 transition-all duration-300 font-semibold rounded-lg flex items-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15"></path>
                        </svg>
                        <span>Leave Family</span>
                    </a>
                </div>
            </div>

            <!-- Family Members Section -->
            <div class="mb-8">
                <h2 class="text-2xl font-bold text-custom-light mb-6 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-3 text-custom-teal">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
                    </svg>
                    Family Members
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    {% for user in family.users %}
                        <div class="bg-gradient-to-br from-custom-mint to-custom-dark rounded-xl p-6 border border-custom-teal hover:border-custom-light hover:shadow-lg hover:shadow-custom-teal/20 transition-all duration-300 transform hover:-translate-y-1">
                            <div class="text-center">
                                <!-- Avatar -->
                                <div class="relative mx-auto mb-4">
                                    <div class="w-16 h-16 bg-gradient-to-br from-custom-teal to-custom-light rounded-full flex items-center justify-center shadow-lg mx-auto">
                                        <span class="text-white text-xl font-bold">
                                            {{ user.name|upper|slice(0, 1) }}
                                        </span>
                                    </div>
                                </div>

                                <!-- User Info -->
                                <div class="space-y-2">
                                    <h3 class="text-lg font-semibold text-custom-light truncate" title="{{ user.email }}">
                                        {{ user.name }}
                                    </h3>
                                    <p class="text-custom-light opacity-70 text-sm">
                                        {% if 'ROLE_ADMIN' in user.roles %}
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                                Admin
                                            </span>
                                        {% else %}
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                                </svg>
                                                Member
                                            </span>
                                        {% endif %}
                                    </p>
                                    <p class="text-custom-light opacity-60 text-xs">
                                        {{ user.email }}
                                    </p>
                                </div>

                                <!-- Admin Actions -->
                                {% if userRole == 'ROLE_ADMIN' and user.id != app.user.id %}
                                    <div class="mt-4 pt-4 border-t border-custom-teal/30">
                                        <div class="flex gap-2">
                                            <!-- Role Change Dropdown -->
                                            <form action="{{ path('app_family_home', {userId: user.id}) }}" method="POST" class="flex-1">
                                                <select name="role" onchange="this.form.submit()" class="w-full text-xs px-2 py-1 bg-custom-dark text-custom-light border border-custom-teal rounded hover:border-custom-light focus:border-custom-light focus:outline-none transition-colors">
                                                    <option value="ROLE_MEMBER" {% if 'ROLE_ADMIN' not in user.roles %}selected{% endif %}>Member</option>
                                                    <option value="ROLE_ADMIN" {% if 'ROLE_ADMIN' in user.roles %}selected{% endif %}>Admin</option>
                                                </select>
                                            </form>

                                            <!-- Kick User Button -->
                                            <form action="{{ path('app_family_home', {userId: user.id}) }}" method="POST" onsubmit="return confirm('Are you sure you want to kick {{ user.name }} from the family?')" class="flex-1">
                                                <button type="submit" class="w-full px-2 py-1 bg-red-500 hover:bg-red-600 text-white text-xs font-medium rounded transition-all duration-200 flex items-center justify-center gap-1" title="Remove {{ user.name }}">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                    </svg>
                                                    <span>Kick</span>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Family Statistics -->
            <div class="bg-gradient-to-br from-custom-mint to-custom-dark rounded-xl p-6 border border-custom-teal shadow-lg mb-8">
                <h2 class="text-xl font-bold text-custom-light mb-6 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-3 text-custom-teal" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    Family Statistics
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="text-center bg-custom-dark/50 rounded-lg p-4">
                        <div class="text-3xl font-bold text-custom-teal mb-2">{{ family.users|length }}</div>
                        <div class="text-custom-light opacity-80">Total Members</div>
                    </div>
                    <div class="text-center bg-custom-dark/50 rounded-lg p-4">
                        <div class="text-3xl font-bold text-custom-teal mb-2">â‚¬{{ family.monthlyTargetBudget }}</div>                        <div class="text-custom-light opacity-80">Monthly Budget</div>
                    </div>
                </div>
            </div>

            <!-- Family Thresholds -->
            <div class="bg-gradient-to-br from-custom-mint to-custom-dark rounded-xl p-6 border border-custom-teal shadow-lg mb-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-bold text-custom-light flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-3 text-custom-teal" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Family Thresholds
                    </h2>
                    {% if userRole == 'ROLE_ADMIN' %}
                        <a href="{{ path('app_threshold_add') }}" class="px-4 py-2 bg-custom-teal text-custom-light hover:bg-custom-light hover:text-custom-dark transition-all duration-300 font-semibold rounded-lg flex items-center space-x-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                            </svg>
                            <span>Add Threshold</span>
                        </a>
                    {% endif %}
                </div>

                {% if family.thresholds is not empty %}
                    <div class="bg-custom-dark/30 rounded-lg overflow-hidden">
                        <table class="w-full">
                            <thead>
                            <tr class="bg-custom-dark/50 border-b border-custom-teal/30">
                                <th class="text-left px-6 py-4 text-custom-light font-semibold">Category</th>
                                <th class="text-left px-6 py-4 text-custom-light font-semibold">Amount</th>
                                {% if userRole == 'ROLE_ADMIN' %}
                                    <th class="text-right px-6 py-4 text-custom-light font-semibold">Actions</th>
                                {% endif %}
                            </tr>
                            </thead>
                            <tbody>
                            {% for threshold in family.thresholds %}
                                <tr class="border-b border-custom-teal/20 hover:bg-custom-dark/30 transition-colors">
                                    <td class="px-6 py-4 text-custom-light font-medium">{{ threshold.category.name }}</td>
                                    <td class="px-6 py-4 text-custom-teal font-semibold">â‚¬{{ threshold.amount }}</td>                                    {% if userRole == 'ROLE_ADMIN' %}
                                        <td class="px-6 py-4 text-right">
                                            <div class="flex items-center justify-end gap-2">
                                                <a href="{{ path('app_threshold_edit', {thresholdId : threshold.id}) }}" class="text-blue-400 hover:text-blue-600 transition-colors p-2 rounded hover:bg-blue-500/10" title="Edit threshold">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                                    </svg>
                                                </a>
                                                <a href="{{ path('app_threshold_delete', {thresholdId : threshold.id}) }}" class="text-red-400 hover:text-red-600 transition-colors p-2 rounded hover:bg-red-500/10" title="Delete threshold">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                    </svg>
                                                </a>
                                            </div>
                                        </td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-8">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 mx-auto text-custom-teal/50 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                        <p class="text-custom-light opacity-60 text-lg">No thresholds set yet</p>
                        <p class="text-custom-light opacity-40 text-sm mt-2">Thresholds help you monitor spending limits for different categories</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Flash Messages -->
    <div class="fixed top-4 right-4 z-50 space-y-3">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="max-w-sm p-4 rounded-lg shadow-lg border-2 transform transition-all duration-300 ease-in-out
                    {% if type == 'success' %}
                        bg-green-100 border-green-500 text-green-700
                    {% elseif type == 'error' %}
                        bg-red-100 border-red-500 text-red-700
                    {% elseif type == 'warning' %}
                        bg-yellow-100 border-yellow-500 text-yellow-700
                    {% else %}
                        bg-blue-100 border-blue-500 text-blue-700
                    {% endif %}">
                    <div class="flex items-center justify-between">
                        <span class="font-medium">{{ message }}</span>
                        <button onclick="this.parentElement.parentElement.remove()" class="ml-3 text-gray-400 hover:text-gray-600 transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}
