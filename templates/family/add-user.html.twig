{% extends 'base.html.twig' %}

{% block title %}Add User to Family{% endblock %}

{% block body %}
    <div class="min-h-screen bg-custom-dark flex justify-center items-center p-4">
        <div class="w-full max-w-md">
            <!-- Flash Messages -->
            <div class="fixed top-4 right-4 z-50 space-y-3">
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="max-w-sm p-4 rounded-lg shadow-lg border-2 transform transition-all duration-300 ease-in-out
                    {% if type == 'success' %}
                        bg-green-100 border-green-500 text-green-700
                    {% elseif type == 'error' %}
                        bg-red-100 border-red-500 text-red-700
                    {% elseif type == 'warning' %}
                        bg-yellow-100 border-yellow-500 text-yellow-700
                    {% else %}
                        bg-blue-100 border-blue-500 text-blue-700
                    {% endif %}">
                            <div class="flex items-center justify-between">
                                <span class="font-medium">{{ message }}</span>
                                <button onclick="this.parentElement.parentElement.remove()" class="ml-3 text-gray-400 hover:text-gray-600 transition-colors">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>

            <div class="bg-custom-mint rounded-2xl shadow-lg p-8 border border-custom-teal">
                <h1 class="text-3xl font-bold text-custom-light mb-8 text-center">Add User to Family</h1>

                {{ form_start(addUserForm) }}

                <div class="space-y-6">
                    {{ form_row(addUserForm.email, {
                        label_attr: { class: 'block text-sm font-semibold text-custom-light mb-2' },
                        attr: { class: 'w-full p-4 bg-custom-dark text-custom-light rounded-lg border-2 border-custom-teal focus:outline-none focus:border-custom-light transition-all duration-300' }
                    }) }}
                </div>

                <button type="submit"
                        class="w-full px-6 py-4 border-2 border-custom-teal bg-custom-teal text-custom-light hover:bg-custom-light hover:text-custom-dark transition-all duration-300 font-semibold text-lg rounded-lg mt-8">
                    Add User
                </button>

                {{ form_end(addUserForm) }}
            </div>
        </div>
    </div>
{% endblock %}
