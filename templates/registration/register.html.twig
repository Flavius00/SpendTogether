{% extends 'blank.html.twig' %}
{% block title %}Register{% endblock %}

{% block body %}
    <div class="h-full bg-custom-dark flex justify-center p-4 overflow-hidden pt-24">
        <div class="w-full max-w-md bg-custom-mint rounded-2xl shadow-lg p-6 border border-custom-teal">
            <h1 class="text-2xl font-bold text-custom-light mb-6 text-center">Create Account</h1>

            {{ form_start(registrationForm) }}

            <div class="space-y-4">
                {{ form_row(registrationForm.name, {
                    label_attr: {
                        'class': 'block text-sm font-semibold text-custom-light mb-2'
                    },
                    attr: {
                        'class': 'w-full p-3 bg-custom-dark text-custom-light rounded-lg border-2 border-custom-teal focus:outline-none focus:border-custom-light transition-all duration-300',
                        'placeholder': 'Example: John Doe'
                    }
                }) }}
                {{ form_row(registrationForm.email, {
                    label_attr: {
                        'class': 'block text-sm font-semibold text-custom-light mb-2'
                    },
                    attr: {
                        'class': 'w-full p-3 bg-custom-dark text-custom-light rounded-lg border-2 border-custom-teal focus:outline-none focus:border-custom-light transition-all duration-300',
                        'placeholder': 'Example: john.doe@gmail.com'
                    }
                }) }}

                <div class="mb-4">
                    {{ form_label(registrationForm.plainPassword.first, 'Password', {
                        'label_attr': {
                            'class': 'block text-sm font-semibold text-custom-light mb-2'
                        }
                    }) }}
                    {{ form_widget(registrationForm.plainPassword.first, {
                        'attr': {
                            'placeholder': 'Enter your password',
                            'class': 'w-full p-3 bg-custom-dark text-custom-light rounded-lg border-2 border-custom-teal focus:outline-none focus:border-custom-light transition-all duration-300'
                        }
                    }) }}
                </div>

                <div class="mb-4">
                    {{ form_label(registrationForm.plainPassword.second, 'Repeat Password', {
                        'label_attr': {
                            'class': 'block text-sm font-semibold text-custom-light mb-2'
                        }
                    }) }}
                    {{ form_widget(registrationForm.plainPassword.second, {
                        'attr': {
                            'placeholder': 'Repeat your password',
                            'class': 'w-full p-3 bg-custom-dark text-custom-light rounded-lg border-2 border-custom-teal focus:outline-none focus:border-custom-light transition-all duration-300'
                        }
                    }) }}
                </div>

                {{ form_widget(registrationForm.agreeTerms, {
                    'attr': {
                        'class': 'mt-1 w-4 h-4 text-custom-teal bg-custom-dark border-2 border-custom-teal rounded focus:ring-custom-light focus:ring-2'
                    }
                }) }}
                {{ form_label(registrationForm.agreeTerms, null, {
                    'label_attr': {
                        'class': 'text-sm text-custom-light cursor-pointer flex-1'
                    }
                }) }}
            </div>

            <button type="submit"
                    class="w-full px-6 py-3 border-2 border-custom-teal bg-custom-teal text-custom-light hover:bg-custom-light hover:text-custom-dark transition-all duration-300 font-semibold rounded-lg mt-6">
                Create Account
            </button>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
