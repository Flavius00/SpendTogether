{% extends 'blank.html.twig' %}
{% block title %}Register{% endblock %}

{% block body %}
    <div class="h-full bg-custom-dark flex justify-center p-4 overflow-hidden pt-24">
        <div class="w-full max-w-md bg-custom-mint rounded-2xl shadow-lg p-6 border border-custom-teal">
            <h1 class="text-2xl font-bold text-custom-light mb-6 text-center">Create Account</h1>

            {{ form_start(registrationForm) }}

            <div class="space-y-4">
                {{ form_row(registrationForm.name, {
                    label_attr: { class: 'block text-sm font-semibold text-custom-light mb-2' },
                    attr: { class: 'w-full p-3 bg-custom-dark text-custom-light rounded-lg border-2 border-custom-teal focus:outline-none focus:border-custom-light transition-all duration-300' }
                }) }}

                {{ form_row(registrationForm.email, {
                    label_attr: { class: 'block text-sm font-semibold text-custom-light mb-2' },
                    attr: { class: 'w-full p-3 bg-custom-dark text-custom-light rounded-lg border-2 border-custom-teal focus:outline-none focus:border-custom-light transition-all duration-300' }
                }) }}

                {{ form_row(registrationForm.plainPassword.first, {
                    label_attr: { class: 'block text-sm font-semibold text-custom-light mb-2' },
                    attr: { class: 'w-full p-3 bg-custom-dark text-custom-light rounded-lg border-2 border-custom-teal focus:outline-none focus:border-custom-light transition-all duration-300' }
                }) }}

                {{ form_row(registrationForm.plainPassword.second, {
                    label_attr: { class: 'block text-sm font-semibold text-custom-light mb-2' },
                    attr: { class: 'w-full p-3 bg-custom-dark text-custom-light rounded-lg border-2 border-custom-teal focus:outline-none focus:border-custom-light transition-all duration-300' }
                }) }}
            </div>

            <button type="submit"
                    class="w-full px-6 py-3 border-2 border-custom-teal bg-custom-teal text-custom-light hover:bg-custom-light hover:text-custom-dark transition-all duration-300 font-semibold rounded-lg mt-6">
                Create Account
            </button>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
