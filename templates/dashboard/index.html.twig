{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="h-full bg-custom-dark p-8 overflow-y-auto">
        <div class="max-w-7xl mx-auto">

            <div class="flex justify-end mb-4 gap-4">
                <div class="relative inline-block">
                    <form method="GET" action="{{ path('app_dashboard') }}">
                        <input type="month" name="month" class="block bg-custom-teal/20 border border-custom-mint text-white py-2 px-4 rounded-lg leading-tight focus:outline-none focus:border-custom-mint focus:ring-2 focus:ring-custom-mint focus:ring-opacity-30 shadow-md transition-all duration-200" value="{{ app.request.get('month') ?: 'now'|date('Y-m') }}" onchange="this.form.submit()" max="{{ 'now'|date('Y-m') }}">
                        <input type="hidden" name="viewType" value="{{ app.request.get('viewType') ?: 'user' }}">
                    </form>
                </div>
                <div class="relative inline-block">
                    <form method="GET" action="{{ path('app_dashboard') }}">
                        <select name="viewType" class="block appearance-none bg-custom-teal/20 border border-custom-mint text-white  py-2 px-4 pr-8 rounded-lg leading-tight focus:outline-none focus:border-custom-mint focus:ring-2 focus:ring-custom-mint focus:ring-opacity-30 shadow-md transition-all duration-200" onchange="this.form.submit()">
                            <option value="user" {% if app.request.get('viewType') == 'user' %}selected{% endif %}>User</option>
                            <option value="family" {% if app.request.get('viewType') == 'family' %}selected{% endif %}>Family</option>
                        </select>
                        <input type="hidden" name="month" value="{{ app.request.get('month') }}">
                    </form>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-custom-mint">
                        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                    </div>
                </div>
            </div>

            <div class="grid w-full gap-5" style="grid-template-areas: 'kpi chart1' 'chart2 chart2'; grid-template-columns: 1.1fr 1fr;">

                <div class="bg-custom-dark rounded-lg border border-gray-700 p-2 text-center flex flex-col relative" style="grid-area: kpi">
                    <div class="w-full bg-custom-dark h-auto text-gray-400 flex justify-center items-center">
                        {{ svg1|raw }}
                    </div>
                </div>

                <div class="bg-custom-dark rounded-lg flex flex-col justify-center items-center gap-5" style="grid-area: chart1">
                    <div class="bg-custom-dark rounded-lg w-full h-1/2 flex items-center justify-center p-2 border border-gray-700">
                        {{ svg3|raw }}
                    </div>
                    <div class="bg-custom-dark rounded-lg w-full h-1/2 flex items-center justify-center p-2 border border-gray-700">
                        {{ svg2|raw }}
                    </div>
                </div>

                <div style="grid-area: chart2; display:flex; gap:8px; width:100%;">
                    <div style="flex: 0 0 70%;" class="border border-gray-700 rounded-lg bg-custom-dark">
                        <svg class="w-full h-auto text-gray-400" viewBox="0 0 400 200">
                            <text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" font-size="20" fill="currentColor">TO DO</text>
                        </svg>
                    </div>
                    <div style="flex: 0 0 30%; padding: 8px; box-sizing: border-box; min-height: 320px;" class="border border-gray-700 rounded-lg bg-custom-dark">
                        <div style="width: 100%; height: 100%;">{{ svgTop|raw }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
