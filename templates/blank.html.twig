<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'system-ui', 'sans-serif'],
                    },
                    colors: {
                        'custom-light': '#EEEEEE',
                        'custom-mint': '#393E46',
                        'custom-teal': '#0092CA',
                        'custom-dark': '#222831'
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body class="h-screen bg-custom-dark font-sans antialiased overflow-hidden">
<nav class="bg-custom-mint/95 backdrop-blur-md border-b border-custom-teal/30 px-6 py-4 z-50 shadow-lg">
    <div class="w-full flex items-center">
        <!-- Logo/Brand - Far Left -->
        <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-custom-teal rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 text-white">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
            </div>
            <span class="text-xl font-bold text-custom-light">Spend Together</span>
        </div>

        <!-- Auth Actions - Far Right -->
        <div class="flex items-center space-x-4 ml-auto">
            <a href="{{ path('app_login') }}"
               class="px-4 py-2 border-2 border-custom-teal text-custom-teal hover:bg-custom-teal hover:text-custom-light transition-all duration-300 font-medium rounded-lg">
                Login
            </a>
            <a href="{{ path('app_register') }}"
               class="px-4 py-2 border-2 border-custom-light text-custom-light hover:bg-custom-light hover:text-custom-dark transition-all duration-300 font-medium rounded-lg">
                Register
            </a>
        </div>
    </div>
</nav>

<div class="flex-1 p-6 overflow-hidden">
    {% block body %}{% endblock %}
</div>
</body>
</html>
