{% extends 'base.html.twig' %}
{% block title %}Edit Threshold{% endblock %}

{% block body %}
    <div class="h-full bg-custom-dark p-8 overflow-y-auto">
        <div class="max-w-2xl mx-auto">
            <!-- Header Section -->
            <div class="mb-8">
                <div class="flex items-center mb-4">
                    <a href="{{ path('app_family_home') }}" class="text-custom-teal hover:text-custom-light transition-colors mr-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                    </a>
                    <h1 class="text-3xl font-bold text-custom-light">Edit Threshold</h1>
                </div>
                <p class="text-custom-light opacity-80">Update the spending limit for this category</p>
            </div>

            <!-- Edit Threshold Form -->
            <div class="bg-gradient-to-br from-custom-mint to-custom-dark rounded-xl p-8 border border-custom-teal shadow-lg">
                {{ form_start(editThresholdForm, {'attr': {'class': 'space-y-6'}}) }}

                <!-- Category Field -->
                <div>
                    {{ form_label(editThresholdForm.category, null, {'label_attr': {'class': 'block text-sm font-medium text-custom-light mb-2'}}) }}
                    {{ form_widget(editThresholdForm.category, {'attr': {'class': 'w-full px-4 py-3 bg-custom-dark border border-custom-teal rounded-lg text-custom-light focus:border-custom-light focus:outline-none focus:ring-2 focus:ring-custom-teal/20 transition-all duration-300'}}) }}
                    {{ form_errors(editThresholdForm.category, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                </div>

                <!-- Amount Field -->
                <div>
                    {{ form_label(editThresholdForm.amount, null, {'label_attr': {'class': 'block text-sm font-medium text-custom-light mb-2'}}) }}
                    <div class="relative">
                        <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-custom-teal font-medium">€</span>
                        {{ form_widget(editThresholdForm.amount, {'attr': {'class': 'w-full pl-8 pr-4 py-3 bg-custom-dark border border-custom-teal rounded-lg text-custom-light focus:border-custom-light focus:outline-none focus:ring-2 focus:ring-custom-teal/20 transition-all duration-300', 'placeholder': '0.00', 'step': '0.01', 'min': '0'}}) }}
                    </div>
                    {{ form_errors(editThresholdForm.amount, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-4 pt-4">
                    <button type="submit" class="flex-1 bg-custom-teal text-custom-light py-3 px-6 rounded-lg font-semibold hover:bg-custom-light hover:text-custom-dark transition-all duration-300 flex items-center justify-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                        </svg>
                        <span>Update Threshold</span>
                    </button>

                    <a href="{{ path('app_family_home') }}" class="flex-1 bg-gray-600 text-custom-light py-3 px-6 rounded-lg font-semibold hover:bg-gray-500 transition-all duration-300 flex items-center justify-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                        <span>Cancel</span>
                    </a>
                </div>

                {{ form_end(editThresholdForm) }}
            </div>

            <!-- Current Threshold Info -->
            {% if threshold is defined %}
                <div class="mt-6 bg-custom-dark/50 rounded-lg p-4 border border-custom-teal/30">
                    <h3 class="text-lg font-semibold text-custom-light mb-2">Current Settings</h3>
                    <div class="grid grid-cols-2 gap-4 text-sm">
                        <div>
                            <span class="text-custom-light opacity-60">Category:</span>
                            <span class="text-custom-teal font-medium ml-2">{{ threshold.category.name }}</span>
                        </div>
                        <div>
                            <span class="text-custom-light opacity-60">Amount:</span>
                            <span class="text-custom-teal font-medium ml-2">€{{ threshold.amount }}</span>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Flash Messages -->
    <div class="fixed top-4 right-4 z-50 space-y-3">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="max-w-sm p-4 rounded-lg shadow-lg border-2 transform transition-all duration-300 ease-in-out
                    {% if type == 'success' %}
                        bg-green-100 border-green-500 text-green-700
                    {% elseif type == 'error' %}
                        bg-red-100 border-red-500 text-red-700
                    {% elseif type == 'warning' %}
                        bg-yellow-100 border-yellow-500 text-yellow-700
                    {% else %}
                        bg-blue-100 border-blue-500 text-blue-700
                    {% endif %}">
                    <div class="flex items-center justify-between">
                        <span class="font-medium">{{ message }}</span>
                        <button onclick="this.parentElement.parentElement.remove()" class="ml-3 text-gray-400 hover:text-gray-600 transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}
